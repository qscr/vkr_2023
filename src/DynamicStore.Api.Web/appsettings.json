{
	"Application": {
		"DbConnectionString": "User ID=postgres;Password=1901;Host=localhost;Port=5432;Database=DynamicStore.Api;Pooling=true;",
		"RmqConnectionString": "amqp://username:password@localhost:5672/vhost",
		"S3": {
			"AccessKey": "AccessKey",
			"SecretKey": "SecretKey",
			"ServiceUrl": "http://localhost:9000",
			"BucketName": "DynamicStore.Api",
			"IgnoreCertificateErrors": true
		}
	},
	"FirebaseServiceAccount": {
		"type": "type",
		"project_id": "project_id",
		"private_key_id": "private_key_id",
		"private_key": "private_key",
		"client_email": "client_email",
		"client_id": "client_id",
		"auth_uri": "auth_uri",
		"token_uri": "token_uri",
		"auth_provider_x509_cert_url": "auth_provider_x509_cert_url",
		"client_x509_cert_url": "client_x509_cert_url"
	},
	"Token": {
		"PrivateKey": "Very very long and super secret key",
		"Authority": "Authority",
		"RequireHttpsMetadata": "false",
		"Audience": "Audience",
		"Issuer": "Issuer",
		"AuthTokenExpiresSpan": "300000",
		"RefreshTokenExpiresSpan": "2592000000",
		"EmailConfirmationTokenExpiresSpan": "2592000000",
		"DefaultTokenExpiresSpan": "86400000",
		"AuthTokenType": "Bearer"
	},
	"CacheProfiles": {
		// Кэшировать статичные файлы на год
		"StaticFiles": {
			"Duration": 31536000,
			"Location": "Any"
		}
	},
	"Compression": {
		// MIME-types, доступные для GZIP-компрессии
		"MimeTypes": [
			"application/vnd.restful+json",
			"application/problem+json"
		]
	},
	"ForwardedHeaders": {
		"AllowedHosts": [
			// TODO
			"example.com"
		],
		"ForwardedHeaders": "XForwardedFor,XForwardedHost,XForwardedProto"
	},
	"Cache": {
		"EndPoints": "Test",
		"InstanceName": "Test"
	},
	"Kestrel": {
		"Endpoints": {
			"Http": {
				"Url": "http://*:80"
			}
		},
		// Настройки лимитов на запросы. Настраивать с осторожностью, помнить про уязвимости от размера запроса
		// See https://docs.microsoft.com/en-us/aspnet/core/fundamentals/servers/kestrel#how-to-use-kestrel-in-aspnet-core-apps
		// And https://docs.microsoft.com/en-us/dotnet/api/microsoft.aspnetcore.server.kestrel.core.kestrelserverlimits
		"Limits": {
			"MaxRequestBodySize": 10240, // 10KB. По умолчанию 30MB. Для увеличения размера использовать [RequestSizeLimit(100000000)] в контроллерах
			"MaxRequestHeaderCount": 40 // По умолчанию 100
		}
	},
	// https://github.com/serilog/serilog-settings-configuration
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning"
			}
		},
		"Enrich": [
			"FromLogContext",
			// https://github.com/RehanSaeed/Serilog.Exceptions.
			"WithExceptionDetails",
			// https://github.com/serilog/serilog-enrichers-environment.
			"WithEnvironmentUserName",
			"WithMachineName",
			// https://github.com/serilog/serilog-enrichers-process.
			"WithProcessId",
			"WithProcessName",
			// https://github.com/serilog/serilog-enrichers-thread.
			"WithThreadId"
		]
	}
}
